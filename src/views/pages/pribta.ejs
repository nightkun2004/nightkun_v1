                    } else if (newSubtitleUrl) {
                        // ‚úÖ ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏Ñ‡∏≥‡∏ö‡∏£‡∏£‡∏¢‡∏≤‡∏¢
                        video.setAttribute("data-srt", newSubtitleUrl);
