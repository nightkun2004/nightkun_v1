                        loadNewSubtitles(video, newSubtitleUrl, subtitleContainer);
                        console.log("‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏ã‡∏±‡∏ö‡πÉ‡∏´‡∏°‡πà:", newSubtitleUrl);
                    }

                    // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡∏•‡∏≤‡∏™ active ‡πÉ‡∏´‡πâ‡∏ï‡∏±‡∏ß‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
                    option.classList.add("active");
